<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/PawnKindDef[defName="NS_Engineer"]/weaponMoney/min</xpath>
        <value>
            <min>5000</min>
        </value>
    </Operation>

