            <texPath>Things/Projectile/P50</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageDef>Bullet</damageDef>
            <speed>220</speed>
        </projectile>
    </ThingDef>

    <ThingDef ParentName="8x120_Plasma_Charge_Bullet_Base">
        <defName>8x120_Plasma_Charge_Bullet</defName>
        <label>8x120 Plasma Charge</label>
        <projectile Class="CombatExtended.ProjectilePropertiesCE">
            <damageAmountBase>55</damageAmountBase>
            <armorPenetrationSharp>45</armorPenetrationSharp>
            <armorPenetrationBlunt>324</armorPenetrationBlunt>
        </projectile>
    </ThingDef>

    <!-- Recipe -->
    <RecipeDef ParentName="AmmoRecipeBase">
        <defName>MakeAmmo_8x120_PlasmaCharge</defName>
        <label>Make 8x120 Plasma Charge x400</label>
        <description>Craft 100 8x120 Plasma Charge Cartridges.</description>
        <jobString>Making 8x120 Plasma Charge Cartridges.</jobString>
        <researchPrerequisite Inherit="False">PlasmaInfusions</researchPrerequisite>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Plasteel</li>
                    </thingDefs>
                </filter>
                <count>50</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>8</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Plasteel</li>
                <li>Steel</li>
                <li>ComponentIndustrial</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Ammo_8x120_PlasmaCharge>100</Ammo_8x120_PlasmaCharge>
