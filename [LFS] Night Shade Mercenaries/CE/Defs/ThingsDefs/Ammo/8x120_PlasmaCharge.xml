        <statBases>
            <Mass>0.03</Mass>
            <Bulk>0.03</Bulk>
        </statBases>
        <tradeTags>
            <li>CE_AutoEnableTrade</li>
            <li>CE_AutoEnableCrafting</li>
        </tradeTags>
        <thingCategories>
            <li>Ammo8x120PlasmaCharge</li>
        </thingCategories>
        <stackLimit>5000</stackLimit>
    </ThingDef>

    <ThingDef Class="CombatExtended.AmmoDef" ParentName="Ammo_8x120_PlasmaCharge_Base">
        <defName>Ammo_8x120_PlasmaCharge</defName>
        <label>8x120 Plasma Infused Charge Cartridge</label>
        <graphicData>
            <texPath>Things/Ammo/Charged/LargeRegular</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <statBases>
            <MarketValue>0.7</MarketValue>
        </statBases>
