<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ==================== AR-T500 (Assault Rifle) ================================ -->
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>CE_Gun_ART500_NS</defName>
        <label>AR-T500 "Assault Rifle"</label>
        <description>The AR-T500 is a standard charge rifle, with a built in plasma infuser</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Things/Weapons/AR-T500</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>

        <recipeMaker>
            <researchPrerequisite>PlasmaInfusions</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FabricationBench</li>
            </recipeUsers>
        </recipeMaker>
        
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>

        <statBases>
            <Mass>2.70</Mass>
            <MarketValue>1250</MarketValue>
            <RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
            <SightsEfficiency>1</SightsEfficiency>
            <ShotSpread>0.16</ShotSpread>
            <SwayFactor>0.89</SwayFactor>
            <Bulk>4.10</Bulk>
            <WorkToMake>45000</WorkToMake>
        </statBases>

        <costList>
            <Steel>30</Steel>
            <Plasteel>60</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
            <ComponentIndustrial>1</ComponentIndustrial>
            <Shadum_Horn>1</Shadum_Horn>
        </costList>

        
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>1.40</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>6x45_Plasma_Charge_Bullet</defaultProjectile>
                <warmupTime>1</warmupTime>
                <range>55</range>
                <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
                <burstShotCount>4</burstShotCount>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>11</muzzleFlashScale>
            </li>
        </verbs>
        
        <comps>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>40</magazineSize>
                <reloadTime>4</reloadTime>
                <ammoSet>AmmoSet_6x45_PlasmaCharge</ammoSet>
            </li>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>FALSE</aiUseBurstMode>
                <aiAimMode>Snapshot</aiAimMode>
                <aimedBurstShotCount>5</aimedBurstShotCount>
            </li>
        </comps>
        
        <weaponTags>
            <li>CE_MachineGun</li>
            <li>CE_AI_LMG</li>
            <li>AdvancedGun</li>
            <li>SpacerGun</li>
            <li>NightShadeStandard</li>
        </weaponTags>
        
        <thingSetMakerTags>
            <li>RewardStandardQualitySuper</li>
        </thingSetMakerTags>

        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <chanceFactor>1.5</chanceFactor>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2.02</cooldownTime>
                <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>muzzle</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
            </li>
        </tools>
    </ThingDef>

