    <!-- Hair -->
    <GeneDef ParentName="GeneHairColorBase">
        <defName>Hair_Zearot</defName>
        <displayCategory>Zearot_Category</displayCategory>
        <label>Zearot Hair Color</label>
        <hairColorOverride>(33, 33, 33)</hairColorOverride>
        <selectionWeight>0.05</selectionWeight>
        <displayOrderInCategory>0</displayOrderInCategory>
        <randomBrightnessFactor>0</randomBrightnessFactor>
    </GeneDef>

    <!-- Skin Color -->
    <GeneDef ParentName="GeneSkinColorOverride">
        <defName>Skin_Color_Zearot</defName>
        <displayCategory>Zearot_Category</displayCategory>
        <label>Zearot Skin Color</label>
        <labelShortAdj>Black</labelShortAdj>
        <description>Carriers of this gene produce a pigment that gives their skin a dark grey
            color.</description>
        <randomBrightnessFactor>0.2</randomBrightnessFactor>
        <skinColorOverride>(33, 33, 33)</skinColorOverride>
        <displayOrderInCategory>65</displayOrderInCategory>
        <symbolPack>
            <prefixSymbols>
                <li>
                    <symbol>dark</symbol>
                </li>
                <li>
                    <symbol>red</symbol>
                </li>
                <li>
                    <symbol>dusty</symbol>
                </li>
            </prefixSymbols>
        </symbolPack>
    </GeneDef>

    <!-- Body -->
    <GeneDef>
        <defName>Body_Zearot</defName>
        <label>Zearot Skin</label>
        <labelShortAdj>skin</labelShortAdj>
        <description>A dark and almost lightless body, with large circles of lighter pigmentation on
            their shoulders.</description>
        <biostatCpx>1</biostatCpx>
        <biostatMet>-1</biostatMet>
        <displayCategory>Zearot_Category</displayCategory>
        <displayOrderInCategory>401</displayOrderInCategory>
        <iconPath>UI/Genes/ZearotBodyIcon</iconPath>
        <iconColor>(0.75, 0.75, 0.75)</iconColor>
        <statOffsets>
            <ComfyTemperatureMax>10</ComfyTemperatureMax>
        </statOffsets>
        <missingGeneRomanceChanceFactor>0.2</missingGeneRomanceChanceFactor>
        <fur>ZearotSkin</fur>
        <tattoosVisible>true</tattoosVisible>
        <skinIsHairColor>false</skinIsHairColor>
        <renderNodeProperties>
            <li>
                <debugLabel>Fur</debugLabel>
                <nodeClass>PawnRenderNode_Fur</nodeClass>
                <workerClass>PawnRenderNodeWorker_Fur</workerClass>
                <baseLayer>5</baseLayer>
                <rotDrawMode>Fresh, Rotting</rotDrawMode>
                <colorType>Hair</colorType>
                <parentTagDef>Body</parentTagDef>
            </li>
        </renderNodeProperties>
    </GeneDef>

    <FurDef>
        <defName>ZearotSkin</defName>
        <noGraphic>true</noGraphic>
        <bodyTypeGraphicPaths>
            <Male>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Male</Male>
            <Female>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Female</Female>
            <Hulk>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Hulk</Hulk>
            <Fat>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Fat</Fat>
            <Thin>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Thin</Thin>
            <Child>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Child</Child>
            <Baby>Things/Pawns/Humanlike/Bodies/Zearot/Zearot_Child</Baby><!-- Always covered by
            swaddled graphic -->
        </bodyTypeGraphicPaths>
    </FurDef>
</Defs>