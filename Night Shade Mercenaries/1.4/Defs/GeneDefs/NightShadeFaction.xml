<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <FactionDef>
        <defName>Faction_NightShadeMercenarys</defName>
        <label>Night Shade Mercenarys</label>
        <description>A lost set of anicent xenos known as the night shades. Using the already advance spacer technolgy have improved and inhanced their own set of deadly weapons. They formed a mercenary group which servers them selves and no one else, set on only taking requests that they know they will win</description>

        <pawnSingular>Mercenary</pawnSingular>
        <pawnsPlural>Mercenarys</pawnsPlural>

        <autoFlee>true</autoFlee>
        <settlementGenerationWeight>0.5</settlementGenerationWeight>

        <requiredCountAtGameStart>1</requiredCountAtGameStart>

        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>

        <leaderTitle>General</leaderTitle>

        <permanentEnemy>false</permanentEnemy>

        <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>


        <factionIconPath>UI/NSMIcon</factionIconPath>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>

        <xenotypeSet Inherit="False">
            <xenotypeChances>
                <Xeno_NightShade>1</Xeno_NightShade>
            </xenotypeChances>
        </xenotypeSet>

        <colorSpectrum>
            <li>(55, 55, 55)</li>
        </colorSpectrum>

        <factionNameMaker>NamerFactionTribalNeanderthal</factionNameMaker>
        <settlementNameMaker>NamerSettlementTribalNeaderthal</settlementNameMaker>
        <techLevel>Spacer</techLevel>

        <backstoryCategories>
            <li>Pirate</li>
        </backstoryCategories>

        <raidLootValueFromPointsCurve>
            <points>
                <li>(35, 15)</li>
                <li>(100, 120)</li>
                <li>(1000, 500)</li>
                <li>(2000, 800)</li>
                <li>(4000, 1000)</li>
            </points>
        </raidLootValueFromPointsCurve>

        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>

        <pawnGroupMakers>
            <li>
                <!-- Offence -->
                <kindDef>Combat</kindDef>
                <options>
                    <NS_Recruit>4</NS_Recruit>
                    <NS_Meele>1</NS_Meele>
                    <NS_Engineer>1</NS_Engineer>
                    <NS_Specialist>2</NS_Specialist>
                    <NS_Heavy>3</NS_Heavy>
                    <NS_Medic>2</NS_Medic>
                    <NS_General>1</NS_General>
                </options>
            </li>

            <li>
                <!-- Defense -->
                <kindDef>Settlement</kindDef>
                <options>
                    <NS_Recruit>4</NS_Recruit>
                    <NS_Meele>1</NS_Meele>
                    <NS_Engineer>1</NS_Engineer>
                    <NS_Specialist>2</NS_Specialist>
                    <NS_Heavy>3</NS_Heavy>
                    <NS_Medic>2</NS_Medic>
                    <NS_General>1</NS_General>
                </options>
            </li>

            <li>
                <!-- Peaceful -->
                <kindDef>Peaceful</kindDef>
                <options>
                    <NS_Recruit>4</NS_Recruit>
                    <NS_Meele>1</NS_Meele>
                    <NS_Engineer>1</NS_Engineer>
                    <NS_Specialist>2</NS_Specialist>
                    <NS_Heavy>3</NS_Heavy>
                    <NS_Medic>2</NS_Medic>
                    <NS_General>1</NS_General>
                </options>
            </li>
        </pawnGroupMakers>
    </FactionDef>
</Defs>